{
  "name": "whorl",
  "version": "0.1.0",
  "description": "A web based audio live coding environment",
  "main": "src/main.js",
  "author": "Guy John",
  "license": "BSD-3",
  "scripts": {
    "prebuild": "jison src/grammar/soundlang.jison -o src/jison-parser.js -m commonjs",
    "build": "browserify . > ./dist/app.js",
    "postbuild": "cp -r ./html/* ./dist/; cat ./style/*.css > ./dist/style.css;",
    "clean": "rm -rf ./dist/* src/jison-parser.js",
    "test": "nodeunit tests",
    "pages": "npm run-script build; git checkout gh-pages; cp ./dist/* ."
  },
  "devDependencies": {
    "browserify": "^9.0.6",
    "jison": "^0.4.15",
    "nodeunit": "^0.9.1"
  }
}
